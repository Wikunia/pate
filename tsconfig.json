{
  "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "removeComments": true,
      "noUnusedParameters": true,
      "sourceMap": false,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}